<h1>Listing requests</h1>

<table>
  <tr>
  <% for column in Request.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for request in @requests %>
  <tr>
  <% for column in Request.content_columns %>
    <td><%=h request.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => request %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => request %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => request }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @requests %>

<br />

<%= link_to 'New request', :action => 'new' %>
