<h1>Asignaciones actuales</h1>

<table cellspacing="10">
  <tr>
    <th>Espacio</th>
    <th>Administrador</th>
  </tr>
  <tr><td colspan="2"><hr/></td></tr>   
<% for space in @spaces %>
  <tr>
    <td><%=h space.name %></td>
    <td><%=h Manager.find(Space.manager(space.id)).name %></td>

    <td><%= link_to 'Editar', :action => 'edit', :id => space %></td>
  </tr>
<% end %>

<tr align="center">
  <td colspan="2"><%= will_paginate @spaces %></td>
</tr>
<tr align="center">
<td colspan="2"><%= link_to 'Agregar un espacio', :action => 'new',:controller=>'spaces' %></td>
</tr>
</table>
